# Example .env file for the DCP AI Scouting Platform
# Copy this file to .env and fill in the values

# Core settings
ENV=development
DEBUG=true
API_PREFIX=/api/v1
PROJECT_NAME=DCP AI Scouting Platform

# Database Configuration # use supabase connection string for direct connection
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/dcp
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# OpenAI settings
# Replace with your actual OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.0

# Scraper settings
SERPAPI_KEY=your_serpapi_key_here
SCRAPER_MAX_CONCURRENT=5
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_DAILY_QUOTA=100
SCRAPER_PROXY_LIST=[]

# Twitter settings
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here
TWITTER_NITTER_BASE_URL=https://nitter.net
TWITTER_MAX_TWEETS=100

# Security settings
SECURITY_JWT_SECRET=your_jwt_secret_here
SECURITY_JWT_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TTL=3600
CACHE_COMPANY_TTL=86400
CACHE_FOUNDER_TTL=86400
CACHE_SEARCH_TTL=3600

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=console
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs

# CORS settings
CORS_ORIGINS='["http://localhost:3000","http://127.0.0.1:5500"]' 